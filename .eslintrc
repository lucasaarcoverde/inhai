{
  "extends": ["vtex"],
  "ignorePatterns": [
    "node_modules/",
    "public/",
    "dist/",
    "types/",
    "coverage/",
    ".vscode/",
    ".cache/",
    "__mocks__/",
    "__generated__/"
  ],
  "overrides": [
    {
      "files": ["**/*.tsx"],
      "extends": ["vtex-react"], 
      "rules": {
        "@typescript-eslint/no-use-before-define": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "no-console": "off"
      }
    }
  ]
}